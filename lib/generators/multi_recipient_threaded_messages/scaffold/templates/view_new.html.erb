<%%= form_tag <%= user_singular_lower_case %>_<%= message_plural_lower_case %>_path(@current_user) do %>
<div id='recipients'>
</div>
<p>
	To:<br />
	<%%= text_field_tag :to %>
	<%%= link_to 'Add Recipient', '#', :onclick => 'addRecipient();' %>
</p>
<p>
	Subject:<br />
	<%%= text_field_tag 'message[subject]' %>
</p>
<p>
	Message:<br />
	<%%= text_area_tag 'message[body]' %>
</p>
<p>
	<%%= submit_tag "Send" %>
</p>
<%% end %>

<script type="text/javascript">
function addRecipient() {
	var recipient_id = $('#to').val();
	$('#to').val('');
	$('#recipients').append("<input name='message[recipients_ids][]' type='hidden' value=" + recipient_id + ">");
}
</script>