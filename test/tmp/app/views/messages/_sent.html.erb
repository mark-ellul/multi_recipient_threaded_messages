<h2>Sent</h2>
<table>
	<tr>
		<th>Delete?</th>
		<th>Subject</th>
		<th>To</th>
		<th>Sent at</th>
	</tr>
	<% if @message_threads.size == 0 %>
		<tr>
			<td colspan="4">
				No messages
			</td>
		</tr>
	<% else %>
		<% for message_thread in @message_threads %>
			<tr>
				<td><%= check_box_tag "delete[]", message_thread.id %></td>
				<td><%= link_to h(message_thread.subject), user_message_path(@current_user, message_thread) %></td>
  			<td><%= display_thread_recipients message_thread %></td>
			  <td><%= message_thread.last_message.created_at.to_s(:long) %></td>
			</tr>
		<% end %>
		<tr>
			<td colspan="4">
				<%= submit_tag "Delete" %>
			</td>
		</tr>
 	<% end %>
</table>
<%= link_to "Inbox", user_messages_path(@current_user)%>